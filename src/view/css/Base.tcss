Screen {
    background: rgba(229, 228, 228, 1);
    color: black;
}

Tabs Underline {
        width: 1fr;
        height: 1;
        & > .underline--bar {
            color: black;
            background: $foreground 90%;
        }
        &:ansi {
            text-style: dim;
        }
    }

Header {
    layout: horizontal;
    width: 100%;
    background: black;
    color: white;
    height: auto;
    width: 100%;
    content-align-vertical: middle;
    text-align: center;
}

Header Button {
    color: red;
    background: transparent;
    width: auto;
    height: auto;
    min-height: 0;
    height: 100%;
    min-width: 0;
    padding: 0;
    dock:left;
    width: 8;
    content-align: left middle;
    border: none;
}

Header Switch {
    color: red;
    background: transparent;
    width: auto;
    height: auto;
    min-height: 0;
    min-width: 0;
    padding: 0;
    width: 7;
    content-align: left middle;
    border: solid 10% black;
}

Header &.-on .switch--slider {
            color: green;
        }

Header & .switch--slider {
        color: red;
            background: rgb(200,200,200);
        }


Header HeaderClock, Header HeaderClockSpace {
    display: none;
}

Header Button:hover {
    color: white;
    background: red;
}

Button:hover {
    background: gray;
}

Header HeaderTitle {
    color: white;
    text-wrap: nowrap;
    text-overflow: ellipsis;
    content-align: center middle;
    width: 97%;
    height: 100%;
    margin: 0;
    border: none;
    min-height: 0;
    min-width: 0;
}

ModalScreen {
    layout: vertical;
    overflow-y: auto;
    background: $background 60%;
    
    &:ansi {
        background: transparent;                   
    }
}

Input, Checkbox, MyInput, MaskedInput, Select SelectOverlay, Select Horizontal, TextArea {
    background: rgba(229, 228, 228, 1);
    color: black;
}

.input--cursor, .input--selection {
    background: black;
    color: white;
}

.text-area--cursor, .text-area--selection {
    background: black;
    color: white;
}

